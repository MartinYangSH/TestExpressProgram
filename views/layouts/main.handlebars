<!DOCTYPE html>
<html>
<head>
	<title>TestProgram</title>
	<!-- 用于测试的部件 -->
	{{#if showTests}}
		<link rel="stylesheet" type="text/css" href="/vendor/mocha.css">
	{{/if}}
	<script type="text/javascript" src="http://code.jquery.com/jquery-2.0.2.min.js"></script>

	<!-- section head 放置的位置 -->
	{{{_sections.head}}}
</head>
<body>
	<div class="container">
		<header><h1>TestProgram</h1></header>
		
		<!-- 用session 实现 即显消息 -->
		{{#if flash}}
			<div class="alert alert-dismissible alert-{{flash.type}}">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>{{flash.intro}}</strong>
				{{{flash.message}}}
			</div>
		{{/if}}

		<!-- 用于放置个性化的视图 -->
		{{{body}}}

		<!-- section jquery 放置的位置 -->
		{{{_sections.jquery}}}

		<!-- 用于测试的部件 -->
		{{#if showTests}}
			<div id="mocha"></div>
			<script type="text/javascript" src="/vendor/mocha.js"></script>
			<script type="text/javascript" src="/vendor/chai.js"></script>
			<script type="text/javascript">
				mocha.ui('tdd');
				var assert = chai.assert;
			</script>
			<script type="text/javascript" src="/qa/tests-global.js"></script>
			{{#if pageTestScript}}
				<script type="text/javascript" src="{{pageTestScript}}"></script>
			{{/if}}
			<script type="text/javascript">mocha.run();</script>
		{{/if}}
		<footer>&copy;TestProgram</footer>
	</div>

	<!-- bootstrap cdn -->
	<link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.5/css/bootstrap-flex.css" rel="stylesheet">
</body>
</html>